<?xml version="1.0" encoding="utf-8"?>
<com.meidp.pictures.view.DragViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_save_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/note_frame_shape"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_top_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/iv_left"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@color/bg_top_bar"
            android:gravity="center"
            android:text="拖动" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="批注内容"
            android:textColor="@color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/iv_right"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@color/bg_top_bar"
            android:gravity="center"
            android:text="取消" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:background="#ffd0d0d0" />

    <TextView
        android:id="@+id/content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:text="批注1："
        android:textColor="@color/text_color_red" />

    <EditText
        android:id="@+id/note_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:hint="批注内容："
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.meidp.pictures.view.ZoomImageView
            android:id="@+id/cg_view"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dp10"
            android:horizontalSpacing="@dimen/dp5"
            android:numColumns="5"
            android:verticalSpacing="@dimen/dp5" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/add_doc_img"

            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_recorder"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="播放录音"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/liner_canposi"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_recorder"
        android:layout_gravity="bottom"
        android:background="@drawable/dialog_edittext"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_second"
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/cancel" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffd0d0d0" />

        <Button
            android:id="@+id/btn_posi_second"
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/ok" />

    </LinearLayout>

    <ImageView
        android:id="@+id/note_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/add_doc_img"
        android:visibility="gone" />
</com.meidp.pictures.view.DragViewGroup>